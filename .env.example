# Environment Configuration Template
# Copy this file to .env and fill in your values

# API Configuration
OPENMETEO_API_BASE_URL=https://api.open-meteo.com/v1
OPENMETEO_HISTORICAL_API_BASE_URL=https://historical-forecast-api.open-meteo.com/v1

# Database Configuration
DATABASE_TYPE=sqlite  # Options: sqlite, postgresql
DATABASE_PATH=data/database/weather.db  # For SQLite
# DATABASE_URL=postgresql://user:password@localhost:5432/sa_weather  # For PostgreSQL

# Data Collection Settings
MAX_API_CALLS_PER_DAY=10000
DATA_COLLECTION_TIMEZONE=Africa/Johannesburg

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Optional: API Rate Limiting
RATE_LIMIT_CALLS=10
RATE_LIMIT_PERIOD=1  # seconds
